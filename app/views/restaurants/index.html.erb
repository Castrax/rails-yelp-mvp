<h1>List all the restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %> <%= link_to '🗑', restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" } %> <%= link_to '✏️', edit_restaurant_path(restaurant) %>  </li>
  <% end %>
</ul>

<p><%= link_to "Create a restaurant", :action => "new", class: "btn btn-primary" %></p>
